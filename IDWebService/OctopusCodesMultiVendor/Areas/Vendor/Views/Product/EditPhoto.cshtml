@{
    ViewBag.Title = "Edit Photo of " + @ViewBag.product.Name;
    Layout = "~/Areas/Vendor/Views/Shared/_LayoutPage.cshtml";
}

@model IDETicaret.Models.Photo

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit Photo of @ViewBag.product.Name</h3>
                </div>
                <!-- /.box-header --> <!-- form start -->
                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        ViewBag.error
                    </div>
                }

                @using (Html.BeginForm("EditPhoto", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="box-body">

                        <div class="form-group">
                            <label for="name">
                                Photo
                            </label>
                            <input type="file" name="name" accept="image/*" />
                            @if (ViewBag.errorPhoto != null)
                            {
                                <br />
                                <span style="color: red">@ViewBag.errorPhoto</span>
                            }
                            <br />
                            <img src="~/Content/User/Images/@Model.Name" width="120" />
                        </div>

                        <div class="checkbox">
                            <label>                                
                                @Html.CheckBoxFor(model => model.Status) Status
                            </label>
                        </div>

                       
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                    
                    @Html.HiddenFor(model => model.ProductId)
                    @Html.HiddenFor(model => model.Id)
                }
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>
