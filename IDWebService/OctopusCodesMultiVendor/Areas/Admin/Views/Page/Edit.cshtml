@{
    ViewBag.Title = "Add Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

@model IDETicaret.Models.Page

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Sayfa Düzenle</h3>
                </div>
                <!-- /.box-header --> <!-- form start -->
                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        @ViewBag.error
                    </div>
                }

                @using (Html.BeginForm("Edit", "Page", FormMethod.Post))
                {
                    <div class="box-body">

                        <div class="form-group">
                            <label for="plug">
                                Anahtar
                            </label>
                            @Html.TextBoxFor(model => model.Plug, new { @class = "form-control", required = "required", placeholder = "Plug" })
                            @Html.ValidationMessageFor(model => model.Plug)
                        </div>

                        <div class="form-group">
                            <label for="title">
                                Değer
                            </label>
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", required = "required", placeholder = "Title" })
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>

                        <div class="form-group">
                            <label for="description">
                                İçerik
                            </label>
                            @Html.TextAreaFor(model => model.Detail, new { @class = "form-control", placeholder = "Detail" })
                            @Html.ValidationMessageFor(model => model.Detail)
                        </div>

                        <div class="checkbox">
                            <label>                                
                                @Html.CheckBoxFor(model => model.Status) Aktif
                            </label>
                        </div>

                       
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                    @Html.HiddenFor(model => model.Id)
                }
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>
