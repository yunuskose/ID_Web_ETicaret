@{
    /**/

    ViewBag.Title = "Yeni Kayıt";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@model IDETicaret.Models.Account
<div id="content" style="width:500px;margin-left:auto;margin-right:auto;font-size:20px;padding:10px;">
    <div style="text-align:center;width:100%;color:#b21828;"><h2><strong>YENİ ÜYE KAYDI</strong></h2></div>
    <hr class="soft">
    @using (Html.BeginForm("Register", "Customers", FormMethod.Post, new { @class = "form-inline" }))
    {
        <fieldset>
            @TempData["message"]

            <div class="control-group">
                <label class="control-label" for="textarea" style="padding:10px;">Kullanıcı Adı</label>
                <div class="controls">
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control input-xxlarge", required = "required", placeholder = "", style = "width:100%;height:50px;font-size:30px;" })
                    <br />
                    @Html.ValidationMessageFor(model => model.Username)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="password" style="padding:10px;">Parola</label>
                <div class="controls">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control input-xxlarge", required = "required", placeholder = "", title = Resources.Customer.Password_validate_message, style = "width:100%;height:50px;font-size:20px;" })
                    <br />
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="textarea" style="padding:10px;">Ad Soyad veya Firma Unvanı</label>
                <div class="controls">
                    @Html.TextBoxFor(model => model.FullName, new { @class = "form-control input-xxlarge", required = "required", placeholder = "", style = "width:100%;height:50px;font-size:20px;" })
                    <br />
                    @Html.ValidationMessageFor(model => model.FullName)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="textarea" style="padding:10px;">E-Posta</label>
                <div class="controls">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-xxlarge", required = "required", placeholder = "", type = "email", style = "width:100%;height:50px;font-size:20px;" })
                    <br />
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="textarea" style="padding:10px;">Cep Telefonu</label>
                <div class="controls">
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control bfh-phone input-xxlarge phone_us", required = "required", placeholder = "", style = "width:100%;height:50px;font-size:20px;", data_mask = "(500) 000 00 00", data_mask_selectonfocus = "true" })
                </div>
            </div>
            <br />

            <button type="submit" class="btn " style="width:60%;font-size:20px;float:right;margin-left:5%;background-color:#27c007;color:white;">@Resources.Customer.Save</button>
            <a href="@Url.Action("Index","Login",null)">
                <button type="button" class="btn btn-danger" style="width:35%;font-size:20px;float:right;">Zaten Üyeyim</button>
            </a>
        </fieldset>
    }

</div>


@section Scripts
{
    <script type="text/javascript" src="@Url.Content("~/Content/UserNew/jquery.mask.js")"></script>
}