                swal({
                    title: "Lütfen adınızı yazınız.",
                    type: "error",
                    timer: 1500,
                    text: "",
                    showConfirmButton: false
                });
                return;
            }
            if ($("#Il").val() == "") {
                swal({
                    title: "Lütfen il yazınız.",
                    type: "error",
                    timer: 1500,
                    text: "",
                    showConfirmButton: false
                });
                return;
            }
            if ($("#Ilce").val() == "") {
