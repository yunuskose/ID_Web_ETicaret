                swal({
                    title: "Lütfen cep telefonu yazınız.",
                    type: "error",
                    timer: 1500,
                    text: "",
                    showConfirmButton: false
                });
                return;
            }
            if ($("#TCKimlikNo").val() == "") {
                swal({
                    title: "Lütfen TC kimlik no yazınız.",
                    type: "error",
                    timer: 1500,
                    text: "",
                    showConfirmButton: false
                });
                return;
            }

